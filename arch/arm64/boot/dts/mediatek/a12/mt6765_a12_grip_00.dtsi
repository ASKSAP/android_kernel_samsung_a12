&i2c21 {
	compatible = "i2c-gpio";
	gpios = <&pio 42 0 /* sda */
			&pio 41 0>; /* scl */
	i2c-gpio,delay-us = <2>;
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	a96t3x6@20 {
		compatible = "a96t3x6";
		reg = <0x20>;

		pinctrl-names = "default";
		pinctrl-0 = <&grip_int>;
		interrupt-parent = <&pio>;
		interrupts = <79 0 0>;

		a96t3x6,irq_gpio = <&pio 79 0>;
		a96t3x6,ldo_en = <&pio 151 0>;
		a96t3x6,fw_path = "abov/a96t356_a12_main.bin";
		a96t3x6,firmup_cmd = <0x3b>;
	};

	a96t3x6@21 {
		compatible = "a96t3x6_sub";
		reg = <0x21>;

		pinctrl-names = "default";
		pinctrl-0 = <&grip_sub_int>;
		interrupt-parent = <&pio>;
		interrupts = <80 0 0>;

		a96t3x6,irq_gpio = <&pio 80 0>;
		a96t3x6,ldo_en = <&pio 151 0>;
		a96t3x6,fw_path = "abov/a96t356_a12_sub.bin";
		a96t3x6,firmup_cmd = <0x3b>;
	};
};

&pio {
	grip_int: grip-int {
		pins_cmd_dat {
			pinmux = <PINMUX_GPIO79__FUNC_GPIO79>;
			slew-rate = <0>;
			bias-disable;
		};
	};
	grip_sub_int: grip-sub-int {
		pins_cmd_dat {
			pinmux = <PINMUX_GPIO80__FUNC_GPIO80>;
			slew-rate = <0>;
			bias-disable;
		};
	};
};
